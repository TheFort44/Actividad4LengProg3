@model List<Actividad4LengProg3.Models.EstudianteViewModel>


    @if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<h1 class="text-center my-4" style="font-size: 2.5rem; font-weight: 600; color: #2c3e50;">
    Listado de estudiantes
</h1>

<div class="row">
    <div class="col-12">
        <table class=" table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Matricula
                    </th>
                    <th>
                        Carrera
                    </th>
                    <th>
                        Correo Institucional
                    </th>
                    <th>
                        Telefono
                    </th>
                    <th>
                        Fecha de nacimiento
                    </th>
                    <th>
                        Genero
                    </th>
                    <th>
                        Turno
                    </th>
                    <th>
                        Tipo de ingreso
                    </th>
                    <th>
                        Becado
                    </th>
                    <th>
                        Porcentaje de beca
                    </th>
                </tr>
            </thead>

            <tbody>
                @{
                    foreach (var datos in Model)
                    {
                    <tr>
                        <td>
                            @datos.Nombre
                        </td>
                        <td>
                           @datos.Matricula
                        </td>
                        <td>
                           @datos.Carrera
                        </td>
                        <td>
                           @datos.CorreoInstitucional
                        </td>
                        <td>
                           @datos.Telefono
                        </td>
                        <td>
                           @datos.FechaNacimiento
                        </td>
                        <td>
                           @datos.Genero
                        </td>
                        <td>
                           @datos.Turno
                        </td>
                        <td>
                           @datos.TipoIngreso
                        </td>
                        <td>
                           @datos.Becado
                        </td>
                        <td>
                           @datos.PorcentajeBeca
                        </td>

                        <td>
                         <a asp-action="Editar" asp-route-matricula="@datos.Matricula" class="btn btn-secondary">
                         Editar
                         </a>
                         </td>
                         <td>
                         <a asp-action="Eliminar" asp-route-matricula="@datos.Matricula" class="btn btn-danger">
                         Eliminar
                         </a>

                        </td>
                    </tr>
                    }
                }
            </tbody>
         </table>
         
        <a class="btn btn-primary" asp-action="Index" asp-controller="Estudiante">Registrar nuevo estudiante</a>
    </div>
</div>