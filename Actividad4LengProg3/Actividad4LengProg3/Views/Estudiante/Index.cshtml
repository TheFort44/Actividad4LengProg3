@{
    ViewData["Title"] = "Registrar Estudiante";
}

@model Actividad4LengProg3.Models.EstudianteViewModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h1 class="text-center my-4" style="font-size: 2.5rem; font-weight: 600; color: #2c3e50;">
    Agregar estudiante
</h1>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<form asp-action="Registrar" method="post">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="w-100 px-3 py-2 border rounded" />
        <span asp-validation-for="Nombre" class="text-danger" />
    </div>

    <div>
        <label asp-for="Matricula"></label>
        <input asp-for="Matricula" class="w-100 px-3 py-2 border rounded" />
        <span asp-validation-for="Matricula" class="text-danger" />
    </div>

    <div>
        <label asp-for="Carrera"></label>
        <select asp-for="Carrera" class="w-100 px-3 py-2 border rounded" asp-items="@(new SelectList (new[] {"Ingenieria Industrial", "Derecho", "Psicologia", "Administracion de Empresas", "Contabilidad" }))">
            <option value="">Seleccione una carrera</option> 
        </select>
        <span asp-validation-for="Carrera" class="text-danger" />
    </div>

    <div>
        <label asp-for="CorreoInstitucional"></label>
        <input asp-for="CorreoInstitucional" class="w-100 px-3 py-2 border rounded" />
        <span asp-validation-for="CorreoInstitucional" class="text-danger" />
    </div>

    <div>
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="w-100 px-3 py-2 border rounded" />
        <span asp-validation-for="Telefono" class="text-danger" />
    </div>

    <div>
        <label asp-for="FechaNacimiento"></label>
        <input asp-for="FechaNacimiento" type="date" class="w-100 px-3 py-2 border rounded" />
        <span asp-validation-for="FechaNacimiento" class="text-danger" />
    </div>

    <div>
        <label>Género</label><br />
        <input type="radio" asp-for="Genero" value="M" /> Masculino
        <input type="radio" asp-for="Genero" value="F" /> Femenino
        <span asp-validation-for="Genero" class="text-danger" />
    </div>

    <div>
        <label asp-for="Turno"></label>
        <select asp-for="Turno" class="w-100 px-3 py-2 border rounded">
            <option value="">Seleccione un turno</option>
            <option>Matutino</option>
            <option>Vespertino</option>
            <option>Nocturno</option>
        </select>
        <span asp-validation-for="Turno" class="text-danger" />
    </div>

    <div>
        <label asp-for="TipoIngreso"></label>
        <select asp-for="TipoIngreso" class="w-100 px-3 py-2 border rounded" asp-items="@(new SelectList (new[] {"Nuevo", "Reingreso", "Transferencia"}))">
            <option value="">Seleccione un tipo</option>
        </select>
        <span asp-validation-for="TipoIngreso" class="text-danger" />
    </div>

    <div>
        <label asp-for="Becado"></label>
        <input asp-for="Becado" type="checkbox" />
    </div>

    <div>
        <label asp-for="PorcentajeBeca"></label>
        <input asp-for="PorcentajeBeca" class="w-100 px-3 py-2 border rounded" />
        <span asp-validation-for="PorcentajeBeca" class="text-danger" />
    </div>

    <div>
        <label>
            <input asp-for="TerminosYCondiciones" type="checkbox" />
            Acepto los términos y condiciones
        </label>
        <span asp-validation-for="TerminosYCondiciones" class="text-danger" />
    </div>

    <td>
    <button class="btn btn-success" type="submit">Crear</button>
    </td>
    <td>
    <a class="btn btn-primary" asp-action="ListadoEstudiantes" asp-controller="Estudiante">Cancelar</a>
    </td>
</form>